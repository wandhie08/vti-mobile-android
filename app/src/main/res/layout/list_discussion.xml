<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/discussionUtama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imageProfile"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/circle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="SB"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/time"
                style="@style/text_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:text="17:23" />

            <TextView
                android:id="@+id/name"
                style="@style/text_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@id/imageProfile"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Wandhie Dimyati"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment"
                style="@style/text_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/imageProfile"
                android:text="Komentar baru acara Maped Coloring Contest: Learning Style
Komentar baru acara Maped Coloring Contest: Learning Style"
                android:textColor="#5A6978" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_below="@id/discussionUtama"
            android:id="@+id/commentUtama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imageProfileComment"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/circle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="SB"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/timeComment"
                style="@style/text_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:text="17:23" />

            <TextView
                android:id="@+id/nameComment"
                style="@style/text_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@id/imageProfileComment"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Wandhie Dimyati"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commentDiscussion"
                style="@style/text_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameComment"
                android:layout_toRightOf="@id/imageProfileComment"
                android:text="Komentar baru acara Maped Coloring Contest: Learning Style
Komentar baru acara Maped Coloring Contest: Learning Style"
                android:textColor="#5A6978" />
        </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/commentUtama"
            android:id="@+id/jawabanLainya"
            style="@style/text_style_small"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="2 Jawaban Lainnya"
            android:textStyle="bold" />
    </RelativeLayout>

</layout>