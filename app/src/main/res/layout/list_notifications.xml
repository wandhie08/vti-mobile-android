<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/backgroundNotif"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diskusi"
        android:id="@+id/title"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/blue"
        style="@style/text_style"/>
    <ImageView
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_toRightOf="@id/title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="@dimen/_10sdp"
        android:id="@+id/circle1"
        android:background="@drawable/circle_blue"
        android:layout_height="@dimen/_10sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@id/circle1"
        android:text="3 Jam yang lalu"
        android:id="@+id/waktu"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/black"
        style="@style/text_style"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Komentar baru acara Maped Coloring Contest: Learning Style Komentar baru acara Maped Coloring Contest: Learning Style"
        android:id="@+id/desc"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        style="@style/text_style"/>
    <View
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_below="@id/desc"
        android:background="@color/grey"
        android:layout_height="@dimen/_1sdp"/>
</RelativeLayout>