<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_dialog"
        android:layout_height="@dimen/_480sdp">
        <TextView
            android:id="@+id/textLogin"
            android:layout_margin="@dimen/_10sdp"
            android:text="Silahkan Login untuk melanjutkan"
            style="@style/text_style_large"/>
        <ImageView
            android:id="@+id/iconImage"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_logo"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_below="@id/textLogin"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_60sdp"/>
        <EditText
            android:padding="@dimen/_5sdp"
            style="@style/text_style"
            android:layout_marginTop="@dimen/_20sdp"
            android:hint="Email / Username"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_form"
            android:layout_below="@id/iconImage"
            android:id="@+id/formUsername"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
        <EditText
            android:padding="@dimen/_5sdp"
            style="@style/text_style"
            android:hint="Password"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_form"
            android:layout_below="@id/formUsername"
            android:inputType="textPassword"
            android:id="@+id/formPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
        <TextView
            android:id="@+id/textLupaPassword"
            android:layout_below="@id/formPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style"
            android:text="Lupa Password ?"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"/>

        <Button
            android:id="@+id/btnLogin"
            style="@style/btn_style"
            android:layout_above="@id/btnRegistrasi"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Login" />

        <TextView
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/btnRegistrasi"
            android:layout_alignParentBottom="true"
            style="@style/text_style"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:text="Anda belum memiliki akun ? Daftarkan diri anda "/>
    </RelativeLayout>

</RelativeLayout>
</layout>